<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
    </style>

    <style name="autoscroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="icon_medium">
        <item name="android:layout_height">@dimen/icon_normal</item>
        <item name="android:layout_width">@dimen/icon_normal</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="nav_drawer_item">
        <item name="android:autoLink">none</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:linksClickable">false</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">15sp</item>
    </style>

    <style name="counter">
        <item name="android:autoLink">none</item>
        <item name="android:textSize">@dimen/counter_text_size</item>
        <item name="android:linksClickable">false</item>
        <item name="android:textColor">@color/text_secondary_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">15sp</item>
    </style>

</resources>
